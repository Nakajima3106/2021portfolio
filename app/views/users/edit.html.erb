<h1 class = "title">プロフィール編集</h1><br>
 <div class="post-text">
  <%= form_with model:@user, local:true do |f| %>
   <div class="form-group">
    <label class ="post-title">プロフィール画像</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
   </div>
   <div class="form-group">
    <label class ="post-title">ニックネーム</label>
    <%= f.text_field :name, class: 'form-control', autofocus: true, id:"inputName", placeholder:"名前"%>
   </div>
   <div class="form-group">
    <label class ="post-title">自己紹介文</label>
    <%= f.text_area :self_introduction, class: 'form-control', autofocus: true %>
   </div>
   <%= f.submit "変更を保存",class:'btn btn-outline-info' %>
   <%= link_to "退会ページ", unsubscribe_path,class:'btn btn-danger' %>
  <% end %>
 </div>