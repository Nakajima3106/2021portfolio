<%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<br><br><h1 class = "title">新規登録</h1><br>

  <div class="form-group">
    <label class ="signin-login-title">名前</label>
    <%= f.text_field :name, autofocus: true, class:"form-control"%>
  </div><br>

  <div class="form-group">
     <label class ="signin-login-title">メールアドレス</label>
     <%= f.email_field :email, autofocus: true, class:"form-control" %>
    </div><br>

  <div class="form-group">
     <label class ="signin-login-title">パスワード</label>
     <% if @minimum_password_length %>
     <label class ="signin-login-title">(<%= @minimum_password_length %>文字以上)</label>
     <% end %>
     <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
    </div><br>

  <div class="form-group">
     <label class ="signin-login-title">パスワード(確認用)</label>
     <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
    </div><br>

  <label class ="signin-login-title"><%= f.submit "新規登録", class:'btn btn-outline-info' %></label>
<% end %>

<label class ="signin-login-title">既に登録済みの方→<%= render "devise/shared/links" %></label>

