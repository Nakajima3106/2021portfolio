<%= form_with model: @user, url: user_session_path, local: true do |f| %>
<br><br><h1 class = "title">ログイン</h1><br>
    <div class="form-group">
     <label class ="signin-login-title">メールアドレス</label>
     <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control"%>
    </div><br>
    <div class="form-group">
     <label class ="signin-login-title">パスワード</label>
     <%= f.password_field :password, autocomplete: "current-password", class:"form-control"%>
    </div><br>
     <div class="form-group">
    <label class ="signin-login-title"><%= f.submit "ログイン", class:'btn btn-outline-info' %></label>
    </div>
<% end %>

    <label class ="signin-login-title">登録がお済みでない方→<%= render "devise/shared/links" %></label>